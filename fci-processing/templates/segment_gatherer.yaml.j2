patterns:
  fdhsi_nc:
    pattern: "{pflag}_{location_indicator},{data_designator},MTI{spacecraft_id:1d}+{data_source}-1C-RRAD-FDHSI-{coverage}-{subsetting}-{component1}-BODY-{component3}-{purpose}-{format}_{oflag}_{originator}_{processing_time:%Y%m%d%H%M%S}_{facility_or_tool}_{environment}_{start_time:%Y%m%d%H%M%S}_{end_time:%Y%m%d%H%M%S}_{processing_mode}_{special_compression}_{disposition_mode}_{repeat_cycle_in_day:>04d}_{segment}.nc"
    critical_files:
    wanted_files: :0029-0040
    all_files: :0029-0040
    variable_tags: ["processing_time", "end_time", "start_time"]
    group_by_minutes: 10
    time_tolerance: 600
    is_critical_set: true
{% if with_hrfi is defined and with_hrfi is sameas true %}
  hrfi_nc:
    pattern: "{pflag}_{location_indicator},{data_designator},MTI{spacecraft_id:1d}+{data_source}-1C-RRAD-HRFI-{coverage}-{subsetting}-{component1}-BODY-{component3}-{purpose}-{format}_{oflag}_{originator}_{processing_time:%Y%m%d%H%M%S}_{facility_or_tool}_{environment}_{start_time:%Y%m%d%H%M%S}_{end_time:%Y%m%d%H%M%S}_{processing_mode}_{special_compression}_{disposition_mode}_{repeat_cycle_in_day:>04d}_{segment}.nc"
    critical_files:
    wanted_files: :0029-0040
    all_files: :0029-0040
    variable_tags: ["processing_time", "end_time", "start_time"]
    group_by_minutes: 10
    time_tolerance: 600
    is_critical_set: false
{% endif %}

timeliness: 1200

time_name: start_time

{% if message_source is defined and message_source == "tcp://trollstaker-fci:10000" %}
check_existing_files_after_start: true
{% else %}
check_existing_files_after_start: false # fails with remote file
{% endif %}

posttroll:
  topics:
    - /1b/FCI-segment/
  addresses:
    - {{ message_source }}
  nameservers: false
  publish_port: 10001
  publish_topic: /dataset/fci_nc
